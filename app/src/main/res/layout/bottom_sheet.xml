<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:text="Photos Provided By Pexels"
        android:textAlignment="center"
        android:textColor="@color/colorTextPrimary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pexel_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:clickable="true"
        android:padding="5dp"
        android:text="www.pexels.com"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/photo_url_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo Url :"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/photo_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/photographer_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photographer Name :"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/photographer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="#009688" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/photographer_url_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photographer Url :"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/photographer_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:clickable="true" />
    </LinearLayout>

</LinearLayout>